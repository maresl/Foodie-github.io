<%- include(`../partials/header`) %>

<h1>Update Profile: </h1>
<form class="dark-form" action="/profile/addUpdates" method="POST">
    <input type="text" name="userName" value="<%= currentUser.userName %>">
    <input type="text" name="email" value="<%= currentUser.email %>">
    <input type="text" name="profilePicture" value="<%= currentUser.profilePicture %>">
    <input type="text" name="bio" placeholder="Include a bio">
    <button type="submit">Add</button>
</form>
<%- include(`../partials/footer`) %>